
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>LiteCommerce | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Themes/AdminLTE/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Themes/AdminLTE/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Themes/AdminLTE/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Themes/AdminLTE/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Themes/AdminLTE/plugins/iCheck/square/blue.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="~/Themes/AdminLTE/index2.html"><b>LiteCommer</b></a>
        </div>
        <!-- /.login-logo -->
        @if (ViewBag.Eror == "Eror")
        {
            <style>
                .login-page{
                    background-color:white;
                }
                .login-box{ margin:0 auto}
            </style>
        <h1 style="text-align:center;color:red">EROR</h1>
        <img style="width:100%" src="https://lh3.googleusercontent.com/proxy/Ybc5rlSoi3RH1AXJensNlJsrN__HNOc1wHVo-NCEdVvzQTH2aVJnR8jYMA8eaHUYMw_mWv-fHYs6c8NDxykMJ4JxJkHFvbx8nFhFdfn38hphrg8" alt="error"/>
        }
        else
        {
        <div class="login-box-body">

            <form action="~/Account/ResetPassword" method="post">
                <div class="form-group has-feedback">
                    <input type="text" name="email" class="form-control" value="@ViewBag.Email" style="display:none">
                    <input type="text" name="code" class="form-control" value="@ViewBag.Code" style="display:none">
                    <input type="password" name="newpassword" class="form-control" placeholder=" New Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                @Html.ValidationMessage("", new { @style = "color:red" })
                <div class="form-group has-feedback">
                    <input type="password" name="retypePassword" class="form-control" placeholder="Retype New Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-xs-3">
                        <button type="submit" class="btn btn-primary btn-block">Save</button>
                    </div>
                    <div class="col-xs-3">
                        <a href="~/Account/Login" class="btn btn-danger">Cancle</a>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
        </div>
        }
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Themes/AdminLTE/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Themes/AdminLTE/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Themes/AdminLTE/plugins/iCheck/icheck.min.js"></script>
    <script>
$(function () {
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' /* optional */
    });
  });</script>
</body>
</html>



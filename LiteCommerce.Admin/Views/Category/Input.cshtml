@model LiteCommerce.DomainModels.Category
@{
}
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Category</h3>
        <a class="btn btn-primary" href="~/Category" style="float:right">Back</a>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form role="form" action="~/Category/Input" method="post">
        <div class="box-body">
            <div class="form-group">
                <input type="text" style="display:none" name="CategoryID" value="@Model.CategoryID" />
                <label for="exampleInputPassword1">Category name</label>
                @Html.ValidationMessage("CompanyName", new { @style = "color:red" })
                <input type="text" class="form-control" name="CategoryName" value="@Model.CategoryName" id="exampleInputPassword1" placeholder=" Enter Category name">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">	Description</label>
                <input type="text" class="form-control" name="Description" value="@Model.Description" id="exampleInputPassword1" placeholder=" Enter Description">
            </div>
        </div>
        <!-- /.box-body -->
        @Html.ValidationMessage("")
        <div class="box-footer">
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
            <a href="~/Category" class="btn btn-danger">Cancel</a>
        </div>
    </form>
</div>


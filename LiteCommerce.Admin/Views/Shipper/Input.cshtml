@model LiteCommerce.DomainModels.Shipper
@{
}
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Shipper</h3>
        <a class="btn btn-primary" href="~/Shipper" style="float:right">Back</a>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form role="form" action="~/Shipper/Input" method="post">
        <div class="box-body">
            <input type="text" style="display:none" name="type" value="@ViewBag.Type" />
            <div class="form-group">
                <input type="text" style="display:none" name="ShipperID" value="@Model.ShipperID" />
                <label for="exampleInputEmail1">Company name</label>
                @Html.ValidationMessage("CompanyName", new { @style = "color:red" })
                <input type="text" class="form-control" id="exampleInputEmail1" name="CompanyName" value="@Model.CompanyName" placeholder="Enter Company name">
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Phone</label>
                <input type="text" class="form-control" id="exampleInputPassword1" name="Phone" value="@Model.Phone" placeholder=" Enter Phone">
            </div>
        </div>
        <!-- /.box-body -->
        @Html.ValidationMessage("")
        <div class="box-footer">
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
            <a href="~/Shipper" class="btn btn-danger">Cancel</a>
        </div>
    </form>
</div>


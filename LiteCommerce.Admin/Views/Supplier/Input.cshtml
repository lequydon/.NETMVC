@model LiteCommerce.DomainModels.Supplier
@{
    
}
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Supplier</h3>
            <a class="btn btn-primary" href="~/Supplier" style="float:right">Back</a>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form" action="~/Supplier/Input" method="post">
            <div class="box-body">
                <div class="form-group">
                    <input style="display:none" name="type" value="@ViewBag.Type" />
                    <input style="display:none" name="SupplierID" value="@Model.SupplierID" />
                    <label for="exampleInputEmail1">Company name</label><br />
                    @Html.ValidationMessage("CompanyName", new { @style = "color:red" })
                    <input type="text" class="form-control" id="exampleInputEmail1" name="CompanyName" placeholder="Enter Company name" value="@Model.CompanyName">
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="exampleInputPassword1">Contact name</label>
                        <input type="text" class="form-control" name="ContactName" id="exampleInputPassword1" placeholder="Enter Contact name" value="@Model.ContactName">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="exampleInputPassword1">Contact title</label>
                        <input type="text" class="form-control" name="ContactTitle" value="@Model.ContactTitle" id="exampleInputPassword1" placeholder="Enter Contact title">
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Address</label>
                    <input type="text" class="form-control" name="Address" value="@Model.Address" id="exampleInputPassword1" placeholder=" Enter Address">
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="exampleInputPassword1">Country</label>
                        <select class="form-control" name="Country">
                            <option value="">--choose Country--</option>
                            @foreach(var item in LiteCommerce.BusinessLayers.CatalogBLL.Country_List())
                            {
                                if (item.CountryName == Model.Country)
                                {
                                    <option value="@item.CountryName" selected>@item.CountryName</option>
                                }
                                else
                                {
                                    <option value="@item.CountryName">@item.CountryName</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="exampleInputPassword1">City</label>
                        <input type="text" class="form-control" name="City" value="@Model.City" id="exampleInputPassword1" placeholder="Enter City">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="exampleInputPassword1">Phone</label>
                        <input type="text" class="form-control" name="Phone" value="@Model.Phone" id="exampleInputPassword1" placeholder="Enter Phone">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="exampleInputPassword1">Fax</label>
                        <input type="text" class="form-control" name="Fax" value="@Model.Fax" id="exampleInputPassword1" placeholder="Enter  Fax">
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">HomePage</label>
                    <input type="text" class="form-control" name="HomePage" value="@Model.HomePage" id="exampleInputPassword1" placeholder="Enter HomePage">
                </div>
            </div>
            <!-- /.box-body -->
            @Html.ValidationMessage("")
            <div class="box-footer">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
                <a href="~/Supplier" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>

